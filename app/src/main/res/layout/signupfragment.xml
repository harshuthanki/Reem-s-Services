<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_backarrow" />

        <com.reemsservices.helper.CustomTextviewMontserratSemiBold
            android:id="@+id/txt_login"
            style="@style/white_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:text="@string/signin" />

    </RelativeLayout>


    <com.reemsservices.helper.CustomTextviewMontserratSemiBold
        style="@style/white_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:text="@string/signup" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_linearlayoutwhite">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:orientation="vertical">

                <com.reemsservices.helper.CustomTextviewMontserratSemiBold
                    style="@style/black_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/username" />

                <com.reemsservices.helper.CustomEditTextMontserratRegular
                    android:id="@+id/edt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/custom_edittext"
                    android:imeOptions="actionNext"
                    android:inputType="text|textNoSuggestions" />

                <com.reemsservices.helper.CustomTextviewMontserratSemiBold
                    style="@style/black_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/mobilenumber" />

                <com.reemsservices.helper.CustomEditTextMontserratRegular
                    android:id="@+id/edt_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/custom_edittext"
                    android:imeOptions="actionNext"
                    android:inputType="phone|textNoSuggestions"
                    android:maxLength="10"/>

                <com.reemsservices.helper.CustomTextviewMontserratSemiBold
                    style="@style/black_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/email" />

                <com.reemsservices.helper.CustomEditTextMontserratRegular
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/custom_edittext"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress|textNoSuggestions" />


                <com.reemsservices.helper.CustomTextviewMontserratSemiBold
                    style="@style/black_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/password"
                    android:visibility="gone" />

                <com.reemsservices.helper.CustomEditTextMontserratRegular
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/custom_edittext"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:visibility="gone" />

                <com.reemsservices.helper.CustomTextviewMontserratSemiBold
                    style="@style/black_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/confirmpassword"
                    android:visibility="gone" />

                <com.reemsservices.helper.CustomEditTextMontserratRegular
                    android:id="@+id/edt_confirmpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/custom_edittext"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp">

                    <com.reemsservices.helper.CustomCheckboxMontserratSemiBold
                        android:id="@+id/check_policy"
                        style="@style/black_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"/>

                    <com.reemsservices.helper.CustomTextviewMontserratSemiBold
                        android:id="@+id/txt_tnc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/black_10"
                        android:text="@string/tnc"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <com.reemsservices.helper.CustomButtonMontserratSemiBold
                    android:id="@+id/btn_sign_up"
                    style="@style/white_14"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/custom_button_square"
                    android:text="@string/signup"
                    android:textAllCaps="false"
                    android:layout_marginBottom="@dimen/_20sdp"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>


</LinearLayout>