<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="vertical">

        <com.reemsservices.helper.CustomTextviewMontserratSemiBold
            android:id="@+id/txt_title"
            style="@style/white_14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center|left"
            android:text="@string/generatecoins"
            android:textColor="@color/darkblue" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp">

        <com.reemsservices.helper.CustomTextviewMontserratSemiBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/black_12"
            android:text="@string/selectbusiness"/>

        <RelativeLayout
            android:id="@+id/relative_spinner_business"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/round_border_gray"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_business"
                style="@style/black_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_25sdp" />

            <ImageView
                android:id="@+id/img_spinner_dropdown"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_drop_down" />
        </RelativeLayout>

        <com.reemsservices.helper.CustomTextviewMontserratSemiBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/black_12"
            android:text="@string/selectcoins"
            android:layout_marginTop="@dimen/_12sdp"/>

        <RelativeLayout
            android:id="@+id/relative_spinner_coins"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/round_border_gray"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_coins"
                style="@style/black_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_25sdp" />

            <ImageView
                android:id="@+id/img_spinner_dropdown1"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_drop_down" />
        </RelativeLayout>

        <com.reemsservices.helper.CustomButtonMontserratSemiBold
            android:id="@+id/btn_generate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_square"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            style="@style/white_14"
            android:text="@string/generate"
            android:textAllCaps="false"/>

    </LinearLayout>

</LinearLayout>