<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/custom_linear_white">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_reviewperson"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/_40sdp"
                    android:src="@drawable/img_person"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                     />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp">

                <com.reemsservices.helper.CustomTextviewMontserratSemiBold
                    android:id="@+id/txt_reviewername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/black_10"
                    android:text="Julien Dobo"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/img_rating"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/ic_rating"
                        android:layout_gravity="center"
                        />

                    <com.reemsservices.helper.CustomTextviewMontserratRegular
                        android:id="@+id/txt_reviewrating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/gray_8"
                        android:text="4.2"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        />
                </LinearLayout>

                <com.reemsservices.helper.CustomButtonMontserratItalic
                    android:id="@+id/txt_review"
                    style="@style/black_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/reviewcontent" />


            </LinearLayout>

        </LinearLayout>

</LinearLayout>