<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_business_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_business_cat"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_salonman"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp">

                <com.reemsservices.helper.CustomTextviewMontserratSemiBold
                    android:id="@+id/txt_name_of_business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/black_12"
                    android:text="@string/nameofbusiness"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_3sdp">

                    <com.reemsservices.helper.CustomTextviewMontserratRegular
                        android:id="@+id/txt_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/gray_10"
                        android:text="@string/rating"/>

                    <com.reemsservices.helper.CustomTextviewMontserratRegular
                        android:id="@+id/txt_rating_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/black_10"
                        android:text="4.3"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_edit"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <com.reemsservices.helper.CustomTextviewMontserratSemiBold
                    android:id="@+id/btn_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/white_10"
                    android:text="@string/edit"
                    android:gravity="center"
                    android:background="@drawable/custom_edit_button"/>

                <com.reemsservices.helper.CustomTextviewMontserratSemiBold
                    android:id="@+id/btn_delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/white_10"
                    android:text="@string/delete"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/custom_cancle_button"/>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>